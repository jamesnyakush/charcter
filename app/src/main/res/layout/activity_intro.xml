<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mob2"
    tools:context=".activities.IntroActivity">

    <Button
        android:id="@+id/btnRegisterMovie"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/ic_baseline_movie_creation_24"
        android:gravity="center|bottom"
        android:text="Register Movies"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btnDisplayMovies"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMovies" />

    <Button
        android:id="@+id/btnDisplayMovies"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/ic_baseline_movie_filter_24"
        android:gravity="center|bottom"
        android:text="Display Movies"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMovies" />

    <Button
        android:id="@+id/btnFavorites"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_baseline_local_movies_24"
        android:gravity="center|bottom"
        android:text="Favorites"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegisterMovie" />

    <Button
        android:id="@+id/btnEditMovies"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ic_baseline_edit_note_24"
        android:gravity="bottom|center"
        android:text="Edit Movies"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDisplayMovies" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_baseline_youtube_searched_for_24"
        android:gravity="center|bottom"
        android:text="Search"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFavorites" />

    <Button
        android:id="@+id/btnRate"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ic_baseline_star_rate_24"
        android:gravity="bottom|center"
        android:text="Rating"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnSearch"
        app:layout_constraintTop_toBottomOf="@+id/btnEditMovies" />

    <TextView
        android:id="@+id/tvMovies"
        android:layout_width="159dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:text="MOVIE'S"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>